<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 


<main>
    <div class="container">
        <%- include("../partials/flash") %>
        <h1 display-4>Shooping-Cart</h1>
    </div>
    <div class="row">
        <% for(let product of products) {%>
        <div class="col-lg-4 col-md-6 mb-3">
            <div class="card mx-auto" style="width: 21rem;">
                <img src="<%= product.img %> " class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %> </h5>
                  <p class="card-text"><%= product.desc.substring(0,95) %></p>
                  <h5 class="card-title"><span>&#8377;</span><%= product.price %></h5>
                  <a href="#" class="btn btn-outline-primary">Add to cart</a>
                  <a href="/products/<%= product.id %>" class="btn btn-outline-secondary">Read More</a>
                  
                </div>
              </div>
        </div>
        <% } %> 
    </div>
</main>


<%- include("../partials/footer") %> 